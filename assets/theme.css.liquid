{% assign header_font = settings.header_font %}
{% assign body_font = settings.body_font %}

* {
  box-sizing: border-box; }

body {
  font-family: {{ body_font.family }}, {{ body_font.fallback_families }};
  line-height: 1.2;
  margin: 0;
  padding: 0; 
}
h1,
h2,
h3,
h4,
h5,
h6 {
  margin-top: 0;
  font-family: {{ header_font.family }}, {{ header_font.fallback_families }};
  font-style: {{ header_font.style }};
  font-weight: {{ header_font.weight }};
  
}
p {
  margin-top: 0;
  font-family: {{ body_font.family }}, {{ body_font.fallback_families }};
  font-style: {{ body_font.style }};
  font-weight: {{ body_font.weight }};
}

.hero-content {
  position: relative;
  padding: 25px 50px; }

.hero {
  display: flex;
  align-items: center;
  background-size: cover;
  background-position: center center;
  position: relative;
  width: 100%;
  justify-content: flex-start;
  height: 50vw; }
  @media screen and (max-width: 840px) {
    .hero {
      height: 45rem; } 
    .hero-content{
    text-align:center;
    }
  	}


.hero-header {
  font-size: {{ settings.header_size_mobile | append: "px"}};
  color: {{ settings.heading_text_color }};
  margin-bottom: 1.3rem;
  margin-top: 0; }
  @media screen and (min-width: 840px) {
    .hero-header {
      font-size: {{ settings.header_size_desktop | append: "px"}}; 
    } 
    .hero-content{
      width: 50%; }
    .text-center {
      text-align: center; }

	.text-left {
  	  text-align: left; }

	.text-right {
 	  text-align: right; }

	.align-right{
	  right: -50%; } 

	.align-center{
	  right: -25%; } 

	.align-left{
	  right: 0%; } 
 	 }

.hero-subtext {
  font-size: {{ settings.body_text_size_mobile | append: "px"}};
  color: {{ settings.body_text_color }};
  line-height: 1.5;
  margin-bottom: 2.8rem; }
  @media screen and (min-width: 840px) {
    .hero-subtext {
      font-size: {{ settings.body_text_size_desktop | append: "px"}}; } }

.cta {
  background-color: {{ settings.primary_color }};
  font-size: {{ settings.button_text_size | append: "px"}};
  padding: 20px 40px;
  color: {{ settings.button_text_color }};
  border-radius: 30px;
  text-decoration: none;
  transition-duration: 200ms;
  transition-timing-function: ease-out; 
  text-transform: uppercase;
}
  .cta:hover {
    background-color: {{ settings.button_text_color }};
    color: {{ settings.primary_color }}; 
  }




